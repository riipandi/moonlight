{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@myorg/tsconfig/nextjs.json",
    "compilerOptions": {
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "~/*": [
                "./public/*"
            ],
            "@myorg/ui": [
                "../../packages/ui-library/src/index.tsx"
            ],
            "@myorg/ui/*": [
                "../../packages/ui-library/src/*"
            ],
            "@myorg/utils": [
                "../../packages/common-utils/src/index.ts"
            ],
            "@myorg/utils/*": [
                "../../packages/common-utils/src/*"
            ]
        }
    },
    "references": [
        {
            "path": "../../packages/common-fonts"
        },
        {
            "path": "../../packages/common-utils"
        },
        {
            "path": "../../packages/ui-library"
        }
    ]
}
